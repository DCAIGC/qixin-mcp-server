# Required Qixin API credentials
QIXIN_APP_KEY=your_app_key_here
QIXIN_SECRET_KEY=your_secret_key_here

# Server mode configuration (choose one)
# For SSE mode:
MCP_SSE=true
MCP_STREAMABLE_HTTP=false

# For Streamable HTTP mode (Dify):
# MCP_SSE=false
# MCP_STREAMABLE_HTTP=true

# Optional configuration
QIXIN_BASE_URL=https://api.qixin.com/APIService
QIXIN_TIMEOUT=30000
QIXIN_MAX_RETRIES=3
LOG_LEVEL=info